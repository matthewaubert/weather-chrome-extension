{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "consistent-return": "off",
        "import/extensions": ["error", "always"],
        "no-console": "off",
        "no-else-return": ["error", {
            "allowElseIf": true
        }],
        "no-param-reassign": ["error", {
            "props": false
        }],
        "no-plusplus": "off",
        "no-unused-expressions": ["error", {
            "allowTernary": true
        }],
        "no-use-before-define": ["error", {
            "functions": false,
            "classes": false
        }]
    }
}
